    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_coupons">

    <fragment
        android:id="@+id/nav_coupons"
        android:name="com.fascinations.ui.home.HomeFragment"
        android:label="@string/menu_coupons"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_store"
        android:name="com.fascinations.ui.gallery.GalleryFragment"
        android:label="@string/menu_store"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_news"
        android:name="com.fascinations.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_news"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_shop"
        android:name="com.fascinations.ui.tools.ToolsFragment"
        android:label="@string/menu_shop"
